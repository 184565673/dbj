<% include header %>
<body>
	<style>
		.file_list {
			border: 1px solid #ccc;
			margin-bottom:20px;
		}
		.file_list li{float:left;width:160px;padding:7px 0 7px 10px;margin:0 2px 2px 0;position:relative;list-style:none}
		.file_list li a{display:block;height:38px;cursor:pointer;}
		.file_list li a:hover{color:#444;text-decoration:none;}
		.file_list li.on {z-index:99}
		.file_list li img{float:left;width:38px;height:38px;display:block}
		.file_list li h3,.file_list li p{height:18px;padding-left:45px;*padding-left:7px;font:12px/18px \5b8b\4f53;white-space:nowrap;}
		.file_list .own{height:38px;line-height:38px;}
	</style>
	<% include nav %>
	
	<div class="container" style="margin-top:100px">
		<div class="file_list">
			<ul class="clearfix">
			    <% imgFiles.forEach(function(file){ %>
			    	<li>
						<a href="#" path="<%=file.path%>">
							<img src="/images/image.png"/>
							<h3 class="own"><%=file.basename%></h3>
						</a>
					</li>
				<% }) %>
			</ul>
		</div>
		<div>
			<a href="#" class="btn btn-large btn-primary" id="updateBtn">更新全部</a>
		</div>
  	</div>

  	<div class="modal fade hide" id="funcBox" style="width:460px">
	  <div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h3>css操作</h3>
	  </div>
	  <div class="modal-footer" style="text-align:center">
	    <button type="button" class="btn btn-success">更新</button>
	  </div>
	</div>
	
</body>
<script src="/javascripts/topicsImg.js"></script>
</html>