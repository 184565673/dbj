<% include header %>
<body>
	<style>
		.file_list {
			border: 1px solid #ccc;
			margin-bottom:20px;
		}
		.file_list li{float:left;width:148px;padding:7px 0 7px 10px;margin:0 2px 2px 0;position:relative;list-style:none}
		.file_list li a{display:block;height:38px;cursor:pointer;}
		.file_list li a:hover{color:#444;text-decoration:none;}
		.file_list li.on {z-index:99}
		.file_list li img{float:left;width:38px;height:38px;display:block}
		.file_list li h3,.file_list li p{height:18px;padding-left:45px;*padding-left:7px;font:12px/18px \5b8b\4f53;white-space:nowrap;}
		.file_list .own{height:38px;line-height:38px;}
		.file_list ul {height:450px;overflow:auto}
	</style>
	<% include nav %>
	
	<div class="container" style="margin-top:100px">
		<div class="file_list">
			<ul class="clearfix">
			    <% topics.forEach(function(topic){ %>
			    	<li>
						<a href="/topics/<%=topic%>">
							<img src="/images/folder.png"/>
							<h3 class="own"><%=topic%></h3>
						</a>
					</li>
				<% }) %>
			</ul>
		</div>
		<div>
			<a href="#" class="btn btn-large btn-primary" id="createBtn">新建活动</a>
			<a href="#" class="btn btn-large btn-info" id="deployBtn">打包</a>
			<a href="#" class="btn btn-large btn btn-danger" id="delBtn">删除</a>
		</div>
  	</div>

  	<div class="modal fade hide" id="createBox" style="width:460px">
	  <div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h3>创建活动</h3>
	  </div>
	  <div class="modal-body">
	    <p style="padding-left:50px;"><input type="text" placeholder="输入活动名称" data-toggle="tooltip" data-placement="right" title="" data-original-title="活动名不能为空"></p>
	  </div>
	  <div class="modal-footer">
	    <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">关闭</a>
	    <button  type="button" class="btn btn-primary" data-loading-text="Loading...">创建</button>
	  </div>
	</div>
	
	<div class="modal fade hide" id="delBox" style="width:460px">
	  <div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h3>删除活动</h3>
	  </div>
	  <div class="modal-body">
	    <p style="padding-left:50px;"><input type="text" placeholder="输入活动名称" data-toggle="tooltip" data-placement="right" title="" data-original-title="活动名称不能为空"></p>
	  </div>
	  <div class="modal-footer">
	    <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">关闭</a>
	    <button  type="button" class="btn btn-danger" data-loading-text="Loading...">删除</button>
	  </div>
	</div>

	<div class="modal fade hide" id="deployBox" style="width:460px">
	  <div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h3>打包主版本</h3>
	  </div>
	  <div class="modal-body">
	    <p style="padding-left:50px;"><input type="text" placeholder="输入活动名称" data-toggle="tooltip" data-placement="right" title="" data-original-title="活动不能为空"></p>
	  </div>
	  <div class="modal-footer">
	    <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">关闭</a>
	    <button  type="button" class="btn btn-info" data-loading-text="Loading...">打包</button>
	  </div>
	</div>

</body>
<script src="/javascripts/topics.js"></script>
</html>